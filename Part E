public static int getRangedInt(Scanner pipe, String prompt, int low, int high) {
    if (low > high) {
        throw new IllegalArgumentException("Low value must be <= high value.");
    }

    int value = 0;
    boolean valid = false;
    String trash;

    do {
        System.out.print("\n" + prompt + " [" + low + " - " + high + "]: ");
        if (pipe.hasNextInt()) {
            value = pipe.nextInt();
            pipe.nextLine(); // clear newline left by nextInt()
            if (value >= low && value <= high) {
                valid = true;
            } else {
                System.out.println("Invalid entry. Please enter an integer between " + low + " and " + high + ".");
            }
        } else {
            trash = pipe.next(); // read non-int token
            System.out.println("Invalid entry. Please enter an integer. You entered: " + trash);
        }
    } while (!valid);

    return value;
}

void main() {
}
